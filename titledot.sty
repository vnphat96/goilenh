\RequirePackage{ifthen}
\RequirePackage{titlesec}
\RequirePackage{titletoc}

\newboolean{nosubsection}

\titlelabel{\thetitle. }%\quad
\contentsmargin{0pt}

\newcommand\@tenchuong{Chương}
\newcommand{\titlename}[1]{\renewcommand{\@tenchuong}{ #1}}

\titlecontents{chapter}[	1.8pc]
  {\addvspace{3pt}\bfseries}
 {\@tenchuong \ \thecontentslabel.\ }
%  {\contentslabel[\hfill\@tenchuong \ \thecontentslabel.\ ]{4pc}}
  {}
  {\dotfill\quad\thecontentspage}


\titlecontents{section}[3.8pc]
  {\addvspace{3pt}\bfseries}
 {\thecontentslabel.\ }
 % {\contentslabel[\thecontentslabel.]{1.8pc}}
  {}
  {\dotfill\quad\thecontentspage}

\titlecontents{subsection}[4.8pc]
{\small}
 {\thecontentslabel.\ }
%   {\contentslabel[\thecontentslabel.]{2.4pc}}
  {}
  {\dotfill\quad\thecontentspage}

\titlecontents{subsubsection}[5.8pc]
{\small}
   {\thecontentslabel.\  }
  {}
  {\dotfill\quad\thecontentspage}


\DeclareOption{nosubsection}{
\titlecontents*{subsection}[1.8pc]
  {\small}
  {\thecontentslabel. }
  {}
  {, \thecontentspage}
  [.---][.]

\titlecontents*{subsubsection}[1.8pc]
  {\small}
  {\thecontentslabel. }
  {}
  {, \thecontentspage}
  [.---][.]
}


